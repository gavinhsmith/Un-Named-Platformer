{
  "name": "un-named-platformer",
  "productName": "Un-Named Platformer",
  "version": "0.0.2",
  "description": "Un-Named Platformer",
  "main": "app.js",
  "scripts": {
    "start": "npx electron . --no-user-gesture-required",

    "gen-signkey": "npx electron-builder create-self-signed-cert --publisher=LettuceManStudios",

    "pack-self": "set CSC_LINK=file://C:/Users/gavin/Certificates/LettuceManStudios.pfx && npx electron-builder --dir",
    "dist-self": "set CSC_LINK=file://C:/Users/gavin/Certificates/LettuceManStudios.pfx && npx electron-builder",

    "pack-win32x64": "set CSC_LINK=file://C:/Users/gavin/Certificates/LettuceManStudios.pfx && npx electron-builder --windows --dir",
    "dist-win32x64": "set CSC_LINK=file://C:/Users/gavin/Certificates/LettuceManStudios.pfx && npx electron-builder --windows",

    "pack-deb-x64": "npx electron-builder --linux deb --dir",
    "dist-deb-x64": "npx electron-builder --linux deb"
  },
  "build": {
    "appId": "unnamedplatformer.gavinhsmith.app",
    "copyright": "Copyright (c) 2020 ${author} All Rights Reserved",
    "mac": {
      "category": "public.app-category.adventure-games",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Games",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/1024x1024.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gavinhsmith/Un-Named-Platformer.git"
  },
  "keywords": [
    "Test",
    "Platformer"
  ],
  "author": "LettuceMan Studios <gavinhsmith420@gmail.com> (https://www.youtube.com/channel/UCY8WQmzdW6u3Ab7GDdTZmng)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gavinhsmith/Un-Named-Platformer/issues"
  },
  "homepage": "https://github.com/gavinhsmith/Un-Named-Platformer#readme",
  "dependencies": {
    "fs": "0.0.1-security",
    "image-data-uri": "^2.0.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^7.1.11",
    "electron-builder": "^22.3.2",
    "electron-packager": "^14.2.0"
  }
}
